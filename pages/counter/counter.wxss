.all {
    align-items: center;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    width: 100vw;
}

.head {
    font-size: 100px;
    height: 50vh;
    line-height: 50vh;
    width: 100%;
}

.head,.mid {
    text-align: center;
}

.mid {
    align-items: center;
    border-radius: 10px;
    color: #fff;
    display: flex;
    flex-direction: column;
    font-size: 80px;
    height: 44vh;
    justify-content: space-around;
    line-height: 44vh;
    width: 96%;
}

.mid view {
    height: 48%;
    line-height: normal;
    width: 100%;
}

.mids,.mid view {
    background-color: #ff4444;
    border-radius: 10px;
}

.mids {
    align-items: center;
    color: #fff;
    display: flex;
    flex-direction: column;
    font-size: 80px;
    height: 44vh;
    line-height: 44vh;
    text-align: center;
    width: 96%;
}

.bottom,.mids {
    justify-content: space-around;
}

.bottom {
    display: inline-block;
    display: -webkit-flex;
    display: flex;
    width: 100%;
}

.bottom view {
    background-color: #ccc;
    border: 1px solid #ccc;
    border-radius: 10px;
    color: #fff;
    text-align: center;
    width: 20vw;
}

.active {
    background-color: brown!important;
}

.slider {
    width: 100%;
}

.xiaoji {
    color: #000;
    font-size: small;
    font-weight: 800;
}