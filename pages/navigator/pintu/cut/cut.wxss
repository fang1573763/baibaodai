page {
    padding: 0;
    margin: 0;
    font-size: 30rpx;
    color: #757575;
    background-color: #ffffff;
    width: 100%;
    height: 100%ï¼›;
}

.button_compress {
  margin: 20rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  background-color: #ff4444;
  color: #fff;
  width: 40vw;
  display: flex;
  align-items: center;
  justify-content: center;
}

.button_upload {
  margin: 20rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 20rpx 0 rgba(212,217,223,.5);
  background-color: #847673;
  color: #fff;
}
.image {
    display: block;
    box-sizing: border-box;
    overflow: hidden;
    position: absolute;
    margin-top: 100px;
    top: 140rpx;
    left: 0;
    z-index: 99;
}

.choose {
    display: block;
    box-sizing: border-box;
    overflow: hidden;
    margin-top: 100px;
    position: absolute;
    top: 140rpx;
    left: 0;
    z-index: 100;
}

.choose-module {
    box-sizing: border-box;
    overflow: hidden;
    float: left;
    background-color: rgba(0,0,0,0.5);
    border: 1rpx dashed #ffffff;
    text-align: center;
    color: #ffffff;
    font-size: 40rpx;
}

.choose-module-oddc {
    background-color: rgba(251,114,160,0.8);
}

.canvas {
    z-index: 1;
    display: block;
    box-sizing: border-box;
    overflow: hidden;
    opacity: 0;
}

.button {
    appearance: none;
    box-sizing: border-box;
    width: 700rpx;
    font-size: 30rpx;
    margin: 20rpx 25rpx;
    background-color: #000000;
    border-radius: 4rpx;
    text-align: center;
    height: 100rpx;
    line-height: 100rpx;
    color: #ffffff;
    border: none;
}

.button::after {
    border: none;
}

.button-hover {
    background-color: #000000;
    color: #ffffff;
}