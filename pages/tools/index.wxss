  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fed931;
  border-radius: 50px;
}

.shareWrap .wrap .button-share .text {
  width: 100%;
  font-size: 14px;
  line-height: 1em;
  text-align: center;
}

