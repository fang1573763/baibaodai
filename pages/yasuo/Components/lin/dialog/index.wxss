.dialog-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 520rpx;
    background: #fff;
    border-radius: 12rpx;
}

.dialog-title {
    font-size: 32rpx;
    font-family: PingFangSC-Regular;
    color: #45526b;
    line-height: 44rpx;
    margin-top: 30rpx;
    padding: 0 25rpx;
    text-align: center;
}

.dialog-content {
    font-size: 28rpx;
    font-family: PingFangSC-Regular;
    color: #596c8e;
    line-height: 40rpx;
    margin-top: 30rpx;
    margin-bottom: 30rpx;
    flex-direction: column;
    padding: 0 25rpx;
}

.dialog-btn-group,.dialog-content {
    display: flex;
    align-items: center;
}

.dialog-btn-group {
    width: 100%;
    height: 80rpx;
    flex-direction: row;
    justify-content: space-between;
    border-top: 2rpx solid #f3f3f3;
}

.dialog-btn-cancel {
    width: 259rpx;
    border-right: 2rpx solid #f3f3f3;
    flex-direction: row;
}

.dialog-btn-cancel,.dialog-btn-confirm {
    font-size: 28rpx;
    height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.dialog-btn-confirm {
    flex: 1;
    color: #3963bc;
    flex-direction: row;
}

.active {
    color: #ff4444;
}

.leave {
    color: #45526b;
}