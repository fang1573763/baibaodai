page {
    padding: 0;
    margin: 0;
    font-size: 30rpx;
    color: #757575;
    background-color: #eee;
    width: 100%;
    height: 100%ï¼›;
}

.textarea {
    background-color: #fff;
    width: 720rpx;
    height: 230rpx;
    line-height: 60rpx;
    padding: 30rpx;
    margin: 20rpx 15rpx;
    border: none;
    box-shadow: 2rpx 2rpx 2rpx rgba(0,0,0,.2);
}

.button,.textarea {
    font-size: 30rpx;
    box-sizing: border-box;
}

.button_compress {
  margin: 20rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  background-color: #ff4444;
  color: #fff;
  width: 40vw;
  display: flex;
  align-items: center;
  justify-content: center;
}
.button {
    appearance: none;
    width: 110rpx;
    margin-left: 15rpx;
    background-color: #ff4444;
    border-radius: 4rpx;
    text-align: center;
    height: 80rpx;
    line-height: 80rpx;
    color: #000;
    float: left;
}

.button,.button::after {
    border: none;
}

.button-hover {
    background-color: #000;
    color: #fff;
}

.image {
    width: 700rpx;
    margin: 80rpx 25rpx 25rpx;
    box-shadow: 2rpx 2rpx 2rpx rgba(0,0,0,.2);
}

.image,.section {
    background-color: #fff;
}

.section {
    box-sizing: border-box;
    width: 720rpx;
    margin: 15rpx 15rpx 0;
    border: none;
    padding: 15rpx 30rpx;
    box-shadow: 0 1rpx 1rpx rgba(0,0,0,.1);
    overflow: hidden;
}

.section_title {
    box-sizing: border-box;
    font-size: 24rpx;
}

.section_input {
    text-align: center;
    box-sizing: border-box;
}

.radio {
    width: 220rpx;
    float: left;
}

.picker,.radio {
    height: 80rpx;
    line-height: 80rpx;
    box-sizing: border-box;
    overflow: hidden;
}

.picker {
    width: 100%;
}