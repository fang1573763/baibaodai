.safe-area-inset-bottom {
    padding-bottom: env(safe-area-inset-bottom);
}

.radius-box {
    background-color: #fff;
    border-radius: 12rpx;
    box-shadow: 0 4rpx 10rpx 0 rgba(0,0,0,.05);
    margin: 24rpx;
    overflow: auto;
    padding: 24rpx;
}

.radius-box:last-of-type {
    margin-bottom: 0;
}

.list-title {
    color: #303133;
    font-size: 36rpx;
    font-weight: 700;
    margin-bottom: 24rpx;
    margin-top: 68rpx;
    padding-left: 48rpx;
    padding-right: 48rpx;
}

.equation {
    background: #f5f5f5;
    min-height: calc(100vh - 88rpx);
    overflow-x: hidden;
    overflow-y: auto;
    padding-top: 88rpx;
}

.equation .topArea {
    align-items: center;
    background-color: #f5f5f5;
    display: flex;
    justify-content: space-between;
    left: 0;
    padding: 0 24rpx;
    position: fixed;
    right: 0;
    top: 0;
    z-index: 1000;
}

.equation .modal-title {
    background-color: #ff4444;
    border-top-left-radius: 20rpx;
    border-top-right-radius: 20rpx;
    color: #fff;
    padding: 24rpx 26rpx;
}

.equation .modal-list {
    height: 50vh;
    overflow-y: auto;
}

.equation .content,.equation .list {
    background-color: #fff;
    padding: 0 12rpx;
}

.equation .content .item,.equation .list .item {
    align-items: center;
    box-sizing: border-box;
    display: flex;
    font-size: 42rpx;
    padding: 24rpx;
    width: 100%;
}

.equation .content .item .index,.equation .list .item .index {
    color: #c0c4cc;
    font-size: 32rpx;
    text-align: left;
    width: 60rpx;
}

.equation .content .item .number,.equation .list .item .number {
    padding: 0 2rpx;
    text-align: center;
}

.equation .content .item .symbol,.equation .list .item .symbol {
    align-items: center;
    display: flex;
    justify-content: center;
    width: 44rpx;
}

.equation .content .item .result,.equation .list .item .result {
    align-items: center;
    background: #fff;
    border: 2rpx solid #c0c4cc;
    border-radius: 8rpx;
    display: inline-flex;
    height: 72rpx;
    justify-content: center;
    margin-left: 12rpx;
    min-width: 88rpx;
    padding: 0 8rpx;
}

.equation .content .item .result.active,.equation .list .item .result.active {
    background-color: #fae3d9;
    border: 2rpx solid #000;
}

.equation .content .item .icon,.equation .list .item .icon {
    margin-left: 12rpx;
}

.equation .submit-btn {
    padding: 0 24rpx;
}

.equation .share {
    padding: 24rpx;
}

.equation .share .icon {
    margin-right: 8rpx;
}

.equation .share .share-over {
    background: transparent;
}

.equation .footer {
    bottom: 0;
    left: 0;
    position: fixed;
    right: 0;
    z-index: 10075;
}

.equation .answer-result .line {
    align-items: center;
    display: flex;
}