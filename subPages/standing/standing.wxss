.safe-area-inset-bottom {
    padding-bottom: env(safe-area-inset-bottom);
}

.radius-box {
    background-color: #fff;
    border-radius: 12rpx;
    box-shadow: 0 4rpx 10rpx 0 rgba(0,0,0,.05);
    margin: 24rpx;
    overflow: auto;
    padding: 24rpx;
}

.radius-box:last-of-type {
    margin-bottom: 0;
}

.list-title {
    color: #303133;
    font-size: 36rpx;
    font-weight: 700;
    margin-bottom: 24rpx;
    margin-top: 68rpx;
    padding-left: 48rpx;
    padding-right: 48rpx;
}

.standing {
    background: #f5f5f5;
    min-height: 100vh;
    overflow-x: hidden;
    overflow-y: auto;
}

.standing .topArea {
    align-items: center;
    display: flex;
    justify-content: space-between;
    padding: 0 24rpx;
}

.standing .modal-title {
    background-color: #ff4444;
    border-top-left-radius: 20rpx;
    border-top-right-radius: 20rpx;
    color: #fff;
    padding: 24rpx 26rpx;
}

.standing .modal-list {
    height: 45vh;
    overflow-x: hidden;
    overflow-y: auto;
}

.standing .content,.standing .list {
    background-color: #fff;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    margin-bottom: 0;
    margin-top: 0;
    padding: 0 24rpx;
}

.standing .content .item,.standing .list .item {
    box-sizing: border-box;
    display: inline-flex;
    font-size: 36rpx;
    margin-bottom: 24rpx;
    min-width: 50%;
    padding: 12rpx;
    text-align: center;
}

.standing .content .item .index,.standing .list .item .index {
    color: #c0c4cc;
    font-size: 32rpx;
    text-align: left;
    width: 60rpx;
}

.standing .content .item .number,.standing .list .item .number {
    display: flex;
    justify-content: flex-end;
    min-width: 100rpx;
    padding: 4rpx;
}

.standing .content .item .number.double,.standing .list .item .number.double {
    justify-content: flex-end;
}

.standing .content .item .number .text,.standing .list .item .number .text {
    display: inline-flex;
    justify-content: center;
    width: 64rpx;
}

.standing .content .item .symbol,.standing .list .item .symbol {
    padding: 4rpx;
    text-align: center;
    width: 32rpx;
}

.standing .content .item .result,.standing .list .item .result {
    align-items: center;
    background: #fff;
    border: 2rpx solid #c0c4cc;
    border-radius: 8rpx;
    display: inline-flex;
    height: 64rpx;
    justify-content: center;
    width: 64rpx;
}

.standing .content .item .result.target,.standing .list .item .result.target {
    border-color: #ff4444;
}

.standing .content .item .result:not(:last-child),.standing .list .item .result:not(:last-child) {
    margin-right: 8rpx;
}

.standing .content .item .result.active,.standing .list .item .result.active {
    background-color: #fae3d9;
    border: 2rpx solid #000;
}

.standing .content .item .icon,.standing .list .item .icon {
    margin-left: 12rpx;
}

.standing .submit-btn {
    padding: 0 24rpx;
}

.standing .share {
    padding: 24rpx;
}

.standing .share .icon {
    margin-right: 8rpx;
}

.standing .share .share-over {
    background: transparent;
}

.standing .footer {
    bottom: 0;
    left: 0;
    position: fixed;
    right: 0;
    z-index: 10075;
}

.standing .answer-result .line {
    align-items: center;
    display: flex;
}