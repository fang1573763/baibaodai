.safe-area-inset-bottom {
    padding-bottom: env(safe-area-inset-bottom);
}

.radius-box {
    background-color: #fff;
    border-radius: 12rpx;
    box-shadow: 0 4rpx 10rpx 0 rgba(0,0,0,.05);
    margin: 24rpx;
    overflow: auto;
    padding: 24rpx;
}

.radius-box:last-of-type {
    margin-bottom: 0;
}

.list-title {
    color: #303133;
    font-size: 36rpx;
    font-weight: 700;
    margin-bottom: 24rpx;
    margin-top: 68rpx;
    padding-left: 48rpx;
    padding-right: 48rpx;
}

.time {
    background-color: #f5f5f5;
    min-height: 100vh;
    overflow-x: hidden;
    overflow-y: auto;
}

.time.dark {
    background: linear-gradient(180deg,#303133,#f5f5f5);
}

.time.dark .dashboard .bg {
    box-shadow: 0 4rpx 6rpx 0 #303133;
}

.time.dark .tips,.time.dark .type {
    color: #fff;
}

.time .dashboard {
    margin: 0 auto;
    position: relative;
    width: 500rpx;
}

.time .dashboard .bg {
    border-radius: 50%;
    box-shadow: 0 4rpx 6rpx 0 #909199;
    width: 100%;
}

.time .dashboard .hour {
    height: 128.7rpx;
    margin-left: -9rpx;
    width: 18rpx;
}

.time .dashboard .hour,.time .dashboard .minute {
    bottom: 50%;
    left: 50%;
    position: absolute;
    transform: rotate(0deg);
    transform-origin: bottom center;
}

.time .dashboard .minute {
    height: 170rpx;
    margin-left: -10rpx;
    width: 20rpx;
}

.time .result {
    font-size: 48rpx;
    text-align: center;
}

.time .slider-box {
    align-items: center;
    display: flex;
    justify-content: space-between;
    margin: 24rpx 48rpx;
}

.time .slider-box .slider {
    flex: 1;
}

.time .slider-box .btn {
    background-color: #ec8181;
    border: 1rpx solid #e4e7ed;
    border-radius: 12rpx;
    box-sizing: border-box;
    color: #fff;
    padding: 4rpx;
    width: 64rpx;
}

.time .tips {
    color: #909399;
    font-size: 28rpx;
    text-align: center;
}

.time .type {
    align-items: center;
    color: #606266;
    display: flex;
    font-size: 36rpx;
    justify-content: center;
    text-align: center;
}

.time .type .exchange {
    margin-left: 12rpx;
    width: 64rpx;
}

.time .btn {
    display: flex;
    justify-content: space-around;
    margin: 24rpx auto;
    text-align: center;
    width: 60%;
}